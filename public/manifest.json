{
  "manifest_version": 3,
  "name": "Meeting Attendee Audio & Screenshot Recorder",
  "version": "1.0.0",
  "description": "Records tab audio to WAV and takes periodic screenshots, saving to a configurable host directory.",
  "permissions": ["storage", "scripting", "activeTab", "tabCapture"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["recorder.html", "recorder.js", "jszip.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
